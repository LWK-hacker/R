/* Reelza Color Theme */

body {
  margin: 0;
  padding: 0;
  font-family: 'Poppins', sans-serif;
  background-color: #111111;
  color: #ffffff;
}

.container {
  max-width: 400px;
  margin: 50px auto;
  background: #1e1e1e;
  padding: 25px;
  border-radius: 15px;
  box-shadow: 0 0 20px #7F00FF33;
}

input, button {
  width: 90%;
  padding: 12px;
  margin: 10px 0;
  border-radius: 8px;
  border: 1px solid #333;
  background: #222;
  color: white;
  font-size: 14px;
}

input::placeholder {
  color: #aaa;
}

button {
  background: linear-gradient(135deg, #7F00FF, #E100FF);
  border: none;
  cursor: pointer;
  font-weight: bold;
  transition: 0.3s;
}

button:hover {
  opacity: 0.9;
}

a {
  color: #E100FF;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

h1, h2 {
  color: #7F00FF;
}